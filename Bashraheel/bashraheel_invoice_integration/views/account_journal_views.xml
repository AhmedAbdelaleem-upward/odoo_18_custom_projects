<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form" model="ir.ui.view">
            <field name="name">account.journal.form.l10n_sa_edi.external.pos</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="thirdparty_integration_system" string="Third-Party Integration" invisible="country_code != 'SA' or type != 'sale'">
                        <group>
                            <group>
                                <field name="thirdparty_store_id" readonly="1"/>
                                <field name="thirdparty_store_code" readonly="1"/>
                                <field name="thirdparty_store_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="l10n_sa_serial_number" readonly="1"/>
                                <field name="l10n_sa_csr" readonly="1"/>
                                <field name="l10n_sa_csr_errors" readonly="1"/>
                                <field name="l10n_sa_compliance_csid_json" readonly="1"/>
                                <field name="l10n_sa_production_csid_json" readonly="1"/>
                                <field name="l10n_sa_production_csid_validity" readonly="1"/>
                                <field name="l10n_sa_compliance_checks_passed" readonly="1"/>
                                <field name="l10n_sa_latest_submission_hash" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    <record id="view_account_journal_tree" model="ir.ui.view">
        <field name="name">account.journal.tree.external.pos.system</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_account_id']" position="after">
                <field name="thirdparty_store_id" optional="show"/>
                <field name="thirdparty_store_code" optional="show"/>
                <field name="thirdparty_store_name" optional="show"/>
            </xpath>
        </field>
    </record>
    </data>
</odoo>