<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_onedrive_attendance_tree" model="ir.ui.view">
        <field name="name">onedrive.attendance.tree</field>
        <field name="model">onedrive.attendance</field>
        <field name="arch" type="xml">
            <list string="Attendance Logs" create="0"
                  decoration-success="sync_status == 'synced'"
                  decoration-warning="sync_status == 'no_employee'"
                  decoration-danger="sync_status == 'error'"
                  decoration-muted="sync_status == 'pending'">
                <field name="user_id"/>
                <field name="check_time"/>
                <field name="check_type"/>
                <field name="sensor_id"/>
                <field name="sync_status" widget="badge"
                       decoration-success="sync_status == 'synced'"
                       decoration-warning="sync_status == 'no_employee'"
                       decoration-danger="sync_status == 'error'"
                       decoration-muted="sync_status == 'pending'"/>
                <field name="hr_attendance_id" optional="show"/>
                <field name="sync_error" optional="hide"/>
                <field name="work_code" optional="hide"/>
                <field name="verify_code" optional="hide"/>
                <field name="user_ext_fmt" optional="hide"/>
                <field name="memo_info" optional="hide"/>
                <field name="sn" optional="hide"/>
                <field name="mdb_file_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_onedrive_attendance_form" model="ir.ui.view">
        <field name="name">onedrive.attendance.form</field>
        <field name="model">onedrive.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance Log" create="0">
                <header>
                    <button name="action_retry_sync" string="Retry Sync" type="object"
                            class="btn-secondary"
                            invisible="sync_status not in ('error', 'no_employee')"/>
                    <field name="sync_status" widget="statusbar"
                           statusbar_visible="pending,synced"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="check_time"/>
                            <field name="check_type"/>
                            <field name="sensor_id"/>
                        </group>
                        <group>
                            <field name="hr_attendance_id"/>
                            <field name="mdb_file_id"/>
                            <field name="sync_error" invisible="not sync_error"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_onedrive_attendance_search" model="ir.ui.view">
        <field name="name">onedrive.attendance.search</field>
        <field name="model">onedrive.attendance</field>
        <field name="arch" type="xml">
            <search string="Search Attendance">
                <field name="user_id"/>
                <field name="sensor_id"/>
                <field name="check_time"/>
                <separator/>
                <filter string="Pending" name="filter_pending" domain="[('sync_status', '=', 'pending')]"/>
                <filter string="Synced" name="filter_synced" domain="[('sync_status', '=', 'synced')]"/>
                <filter string="No Employee" name="filter_no_employee" domain="[('sync_status', '=', 'no_employee')]"/>
                <filter string="Errors" name="filter_error" domain="[('sync_status', '=', 'error')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'check_time:day'}"/>
                    <filter string="Check Type" name="group_type" context="{'group_by': 'check_type'}"/>
                    <filter string="Sync Status" name="group_sync" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Server Action: Mark as To Sync -->
    <record id="action_mark_to_sync" model="ir.actions.server">
        <field name="name">Mark as To Sync</field>
        <field name="model_id" ref="model_onedrive_attendance"/>
        <field name="binding_model_id" ref="model_onedrive_attendance"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
for record in records:
    record.write({'sync_status': 'pending', 'sync_error': False, 'hr_attendance_id': False})
        </field>
    </record>

    <!-- Action -->
    <record id="action_onedrive_attendance" model="ir.actions.act_window">
        <field name="name">Attendance Logs (Fingerprint)</field>
        <field name="res_model">onedrive.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_date': 1}</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_onedrive_attendance"
              name="Attendance Logs"
              parent="onedrive_integration_odoo.onedrive_dashboard_menu_root"
              action="action_onedrive_attendance"
              sequence="20"/>
</odoo>

